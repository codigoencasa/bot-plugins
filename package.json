{
  "name": "bot-plugins",
  "version": "0.0.1",
  "description": "Third-party bot-plugins",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "commit": "git-cz",
    "publish:dev": "npx lerna publish from-package --dist-tag dev",
    "build": "npx lerna run build",
    "fmt.staged": "pretty-quick --staged",
    "next-version": "npx lerna version prepatch -y",
    "lint": "eslint .",
    "test": "jest",
    "lint:fix": "eslint --fix ./packages",
    "prepare": "npx husky install",
    "format": "prettier --check 'packages/**/*.{ts,tsx}'",
    "format:fix": "prettier --write 'packages/**/*.{ts,tsx}'"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/honojs/middleware.git"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "commitlint": "18.6.0",
    "eslint": "^8.55.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^9.0.10",
    "jest": "^29.5.0",
    "jest-environment-miniflare": "^2.14.1",
    "lerna": "^8.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "pretty-quick": "^4.0.0",
    "rimraf": "5.0.5",
    "ts-jest": "^29.1.1",
    "tsm": "^2.3.0",
    "typescript": "^5.2.2"
  },
  "packageManager": "pnpm@8.12.1"
}
